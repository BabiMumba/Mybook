<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.babimumba.mybook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        tools:replace="android:supportsRtl"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolAPP"
        tools:targetApi="31">
        <activity
            android:name=".Activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.ProfileEditActivity" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.BookViewActivity" />
        <activity android:name=".Activity.BookDetailsActivity" />
        <activity android:name=".Activity.BookEditActivity" />
        <activity android:name=".Activity.BookAddActivity" />
        <activity android:name=".Auth.ForgetPasswordActivity" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Auth.LoginActivity" />
        <activity android:name=".Auth.RegisterActivity" />
        <activity android:name=".Auth.AuthActivity" />
        <activity android:name=".Activity.BooksCategoryActivity" />
        <activity android:name=".Activity.PrivacyPolicyActivity" />
        <activity android:name=".Activity.FavoritesActivity" />
        <activity android:name=".Activity.ProfileInfoActivity" />
        <activity android:name=".Activity.MyBooksActivity" />
        <activity android:name=".Activity.FollowersActivity" />
        <activity android:name=".Activity.ExplorePublishersActivity" />
        <activity android:name=".Activity.MoreBooksActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <!--        <activity
                    android:name="com.google.android.gms.ads.AdActivity"
                    android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_id" />

    </application>

</manifest>